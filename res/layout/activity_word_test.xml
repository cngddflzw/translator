<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".WordTestActivity" >

	<TextView
        android:id="@+id/originWordLabel"
        android:layout_width="wrap_content"
        android:layout_height="50dip"
        android:layout_marginTop="100dip"
        android:text="原文: "
        android:textColor="#000000"
        android:textSize="20dip" />
    
    <TextView
        android:id="@+id/originWord"
        android:layout_width="match_parent"
        android:layout_height="50dip"
        android:layout_marginLeft="10dip"
        android:layout_toRightOf="@id/originWordLabel"
        android:layout_alignBottom="@id/originWordLabel"
        android:textSize="20dip" />
    
    <TextView
        android:id="@+id/translateTextLable"
        android:layout_width="wrap_content"
        android:layout_height="50dip"
        android:layout_below="@id/originWordLabel"
        android:textColor="#000000"
        android:layout_marginTop="40dip"
        android:text="译文: "
        android:textSize="20dip" />
    
    <EditText
        android:id="@+id/translateText"
        android:layout_width="match_parent"
        android:layout_height="50dip"
        android:layout_toRightOf="@id/translateTextLable"
        android:layout_marginLeft="10dip"
        android:layout_alignBottom="@id/translateTextLable"
        android:layout_alignLeft="@id/originWord"
        android:background="@null"
        android:hint="请输入译文"
        android:textSize="20dip" />
    
    <Button 
        android:id="@+id/nextWord"
        android:layout_width="100dip"
        android:layout_height="wrap_content"
        android:text="下一个"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/translateText"
        android:layout_marginTop="20dip" />
</RelativeLayout>